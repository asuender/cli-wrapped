{
  "permissions": {
    "allow": [
      "Bash(pnpm run build:*)",
      "Bash(pnpm run lint:*)",
      "Bash(pnpm run format:*)",
      "Bash(pnpm link)",
      "Bash(pnpm add:*)",
      "Bash(pnpm exec lint-staged)",
      "Bash(node dist/cli.js:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(git push)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh api:*)",
      "Bash(gh issue:*)",
      "Skill(commit-skill)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm exec prettier --write $CLAUDE_FILE_PATHS"
          }
        ]
      }
    ]
  }
}
